{
  // ===== General ======
  "colors.enable": true,
  "semanticTokens.filetypes": [],
  "coc.preferences.enableMessageDialog": true,
  "coc.preferences.formatOnSave": true,
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  // ===== Coc-list ======
  "list.insertMappings": {
    "<C-c>": "do:exit",
    "<C-j>": "do:next",
    "<C-k>": "do:previous",
    "<C-v>": "action:vsplit",
    "<C-s>": "action:split",
    "<C-e>": "action:tabe",
    "<C-o>": "do:togglemode",
    "<C-p>": "prompt:paste"
  },
  "list.normalMappings": {
    "<C-c>": "do:exit",
    "<C-j>": "do:next",
    "<C-k>": "do:previous",
    "<C-v>": "action:vsplit",
    "<C-s>": "action:split",
    "<C-e>": "action:tabe",
    "<C-o>": "do:togglemode"
  },
  "list.source.files.excludePatterns": [
    "**/.cargo/**",
    "**/node_modules/**",
    "**/pnpm-lock.yaml",
    "**/yarn.lock",
    "**/package-lock.json",
    "**/.git/**",
    "**/.yarn/**"
  ],
  "list.source.mru.excludePatterns": [
    "**/.cargo/**",
    "**/node_modules/**",
    "**/pnpm-lock.yaml",
    "**/yarn.lock",
    "**/package-lock.json",
    "**/.git/**",
    "**/.yarn/**"
  ],
  "list.source.grep.excludePatterns": [
    "**/.cargo/**",
    "**/node_modules/**",
    "**/pnpm-lock.yaml",
    "**/yarn.lock",
    "**/package-lock.json",
    "**/.git/**",
    "**/.yarn/**"
  ],
  "list.source.files.args": ["--ignore-case", "--hidden", "--files"],
  "list.source.grep.args": ["--ignore-case", "--hidden"],
  // ===== Coc-explorer ======
  "explorer.keyMappings.global": {
    "v": ["open:vsplit"],
    "e": ["open:tab"]
  },
  "explorer.file.showHiddenFiles": true,
  // ===== Completion ======
  "suggest.noselect": true,
  "suggest.echodocSupport": true,
  "suggest.maxCompleteItemCount": 20,
  // ===== Disagnostic ======
  "diagnostic.errorSign": "×",
  "diagnostic.warningSign": "!",
  "diagnostic.infoSign": "?",
  // ===== JS ======
  "typescript.format.enabled": false,
  "javascript.format.enabled": false,
  "prettier.trailingComma": "es5",
  "eslint.autoFixOnSave": false,
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.experimental.useFlatConfig": false, // 時代がきたらtrueにする
  "prettier.disableLanguages": ["markdown"],
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "tsx": "html"
  },
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  // ===== Server ======
  "languageserver": {
    "sorbet": {
      "command": "srb",
      "args": ["tc", "--lsp", "--enable-all-experimental-lsp-features"],
      "filetypes": ["ruby"],
      "rootPatterns": ["sorbet/config"],
      "initializationOptions": {},
      "settings": {}
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".git/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "completeUnimported": true,
        "analyses": {
          "copylocks": false, // Irvine Server
          "infertypeargs": false // Irvine Server
        }
      }
    },
    "some-sass-language-server": {
      // install method: npm install --global some-sass-language-server
      "command": "some-sass-language-server",
      "args": ["--stdio"],
      "filetypes": ["scss"]
    },
    "golangci-lint-languageserver": {
      "command": "golangci-lint-langserver",
      "filetypes": ["go"],
      "initializationOptions": {
        "command": [
          "golangci-lint",
          "run",
          "--output.json.path",
          "stdout",
          "--show-stats=false",
          "--issues-exit-code=1"
        ]
      }
    }
  },

  // ===== coc-deepl =====
  "deepl.enabled": true,
  "deepl.plan": "free",
  "deepl.targetLanguage": "JA",

  // Rust
  "rust-analyzer.diagnostics.enable": false,
  "rust-analyzer.checkOnSave": true,
  // "rust-analyzer.check.command": "clippy",
  "inlayHint.enable": false,

  // ===== tsserver ======
  "tsserver.useLocalTsdk": true,

  "yaml.format.singleQuote": true,

  // ===== ansible ======
  "ansible.enable": true,
  "ansible.validation.lint.enabled": true,
  "ansible.ansible.useFullyQualifiedCollectionNames": true,

  // ===== yaml ======
  "yaml.schemas": {
    "https://raw.githubusercontent.com/ansible/ansible-lint/main/src/ansiblelint/schemas/tasks.json": [
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml"
    ],
    "https://raw.githubusercontent.com/ansible/ansible-lint/main/src/ansiblelint/schemas/ansible.json": [
      "**/playbooks/*.yml",
      "**/playbooks/*.yaml",
      "**/roles/**/meta/main.yml",
      "**/roles/**/meta/main.yaml"
    ]
  }
}
