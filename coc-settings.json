{
  // ===== General ======
  "colors.enable": true,
  "semanticTokens.filetypes": [],
  "coc.preferences.enableMessageDialog": true,
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  // ===== Coc-list ======
  "list.insertMappings": {
    "<C-c>": "do:exit",
    "<C-j>": "do:next",
    "<C-k>": "do:previous",
    "<C-v>": "action:vsplit",
    "<C-s>": "action:split",
    "<C-e>": "action:tabe",
    "<C-o>": "do:togglemode",
    "<C-p>": "prompt:paste"
  },
  "list.normalMappings": {
    "<C-c>": "do:exit",
    "<C-j>": "do:next",
    "<C-k>": "do:previous",
    "<C-v>": "action:vsplit",
    "<C-s>": "action:split",
    "<C-e>": "action:tabe",
    "<C-o>": "do:togglemode"
  },
  "list.source.files.excludePatterns": [
    "**/.cargo/**",
    "**/node_modules/**",
    "**/pnpm-lock.yaml",
    "**/yarn.lock",
    "**/package-lock.json",
    "**/.git/**",
    "**/.yarn/**"
  ],
  "list.source.mru.excludePatterns": [
    "**/.cargo/**",
    "**/node_modules/**",
    "**/pnpm-lock.yaml",
    "**/yarn.lock",
    "**/package-lock.json",
    "**/.git/**",
    "**/.yarn/**"
  ],
  "list.source.grep.excludePatterns": [
    "**/.cargo/**",
    "**/node_modules/**",
    "**/pnpm-lock.yaml",
    "**/yarn.lock",
    "**/package-lock.json",
    "**/.git/**",
    "**/.yarn/**"
  ],
  "list.source.files.args": ["--ignore-case", "--hidden", "--files"],
  "list.source.grep.args": ["--ignore-case", "--hidden"],
  // ===== Coc-explorer ======
  "explorer.keyMappings.global": {
    "v": ["open:vsplit"],
    "e": ["open:tab"]
  },
  "explorer.file.showHiddenFiles": true,
  // ===== Completion ======
  "suggest.noselect": true,
  "suggest.echodocSupport": true,
  "suggest.maxCompleteItemCount": 20,
  // ===== Disagnostic ======
  "diagnostic.errorSign": "Ã—",
  "diagnostic.warningSign": "!",
  "diagnostic.infoSign": "?",
  // ===== JS ======
  "typescript.format.enabled": false,
  "javascript.format.enabled": false,
  "prettier.trailingComma": "es5",
  "eslint.autoFixOnSave": false,
  "prettier.disableLanguages": ["markdown"],
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "tsx": "html"
  },
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  // ===== Server ======
  "languageserver": {
    "sorbet": {
      "command": "srb",
      "args": ["tc", "--lsp", "--enable-all-experimental-lsp-features"],
      "filetypes": ["ruby"],
      "rootPatterns": ["sorbet/config"],
      "initializationOptions": {},
      "settings": {}
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  },
  // ===== Go ======
  "go.goplsOptions": {
    "completeUnimported": true
  },

  // ===== coc-deepl =====
  "deepl.enabled": true,
  "deepl.plan": "free",
  "deepl.targetLanguage": "JA",

  // Rust
  "rust-analyzer.diagnostics.enable": false,
  "rust-analyzer.checkOnSave": true,
  "inlayHint.enable": false
}
